<%= form_with(model: prestamo) do |form| %>
  <% if prestamo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prestamo.errors.count, "error") %> prohibited this prestamo from being saved:</h2>

      <ul>
        <% prestamo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :feha, style: "display: block" %>
    <%= form.date_field :feha %>
  </div>

