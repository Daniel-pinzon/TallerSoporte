    <%= form.label :estado, style: "display: block" %>
    <%= form.number_field :estado %>
  </div>

  <div>
    <%= form.label :Usuario_id, style: "display: block" %>
   <%= form.select :Usuario_id, options_for_select(Usuario.all.map{|s|[s.nombre + ' ' + s.apellido, s.id]}) %>
